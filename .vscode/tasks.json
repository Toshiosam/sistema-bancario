{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Projeto (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                // Compilando apenas os arquivos .cpp necess√°rios
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/ContaBancaria.cpp",
                "-I",
                "${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/output/sistema_bancario.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}